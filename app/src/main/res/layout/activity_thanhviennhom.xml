<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header giữ nguyên -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thành viên nhóm"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card thành viên 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/nam"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#DDDDDD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvTenThanhVien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phan Hồ Nhật Nam"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:id="@+id/tvMaSV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MSSV: 22115053122323"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvLopHP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lớp: 124LTTD01"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card thành viên 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/quang"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#DDDDDD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvTenThanhVien2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trần Đức Quang"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:id="@+id/tvMaSV2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MSSV: 21115053120343"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvLopHP2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lớp: 124LTTD01"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card thành viên 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/hoang"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#DDDDDD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvTenThanhVien3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trần Võ Đình Hoàng"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:id="@+id/tvMaSV3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MSSV: 22115053122211"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvLopHP3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lớp: 124LTTD01"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
